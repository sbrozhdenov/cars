{% extends 'base-mobile.html.twig' %}

{% block title %}Влизане
{% endblock %}

{% block body %}
	<div class="card-header mb-3">Влизане</div>
	{{ form_start(form) }}
	<div class="form-group">
		{{ form_row(form.email, {'attr': {'class': 'form-control'},  'label': 'Имейл' }) }}
	</div>

	<div class="form-group">
		{{ form_row(form.password, {'attr': {'class':
              'form-control password', 'label': 'Парола'}}) }}
	</div>
	<div class="col-md-12">
		<button type="button" class="btn btn-primary btn-block">Влизане</button>
	</div>
	{{ form_end(form) }}

	<img src="assets/img/hero.jpg" / style="margin-top:120px;margin-left:100px">
{% endblock %}
