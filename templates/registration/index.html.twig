{% extends 'base.html.twig' %}

{% block title %}Регистрация
{% endblock %}

{% block body %}
	<div class="container">
		<div class="login-background-image" style="background-image: url(assets/img/hero.jpg);"></div>
		<div class="row">
			<div class="col-md-10 ml-md-auto">
				<div class="card bg-light mb-3 mt-5" style="width: 70%;">
					<div class="card-body" id="registration">
						<div class="card-header mb-3">Регистрация</div>
						{{ form_start(form) }}
						<div class="form_group">
							<div class="col-md-12 mb-3 name">
								{{ form_row(form.name, {'attr': {'class': 'form-control'},  'label': 'Име' }) }}
							</div>

						</div>
						<div class="form_group">
							<div class="col-md-12 mb-3 email">
								{{ form_row(form.email, {'attr': {'class': 'form-control'},  'label': 'Имейл'}) }}
							</div>
						</div>
						<div class="form_group">
							<div class="col-md-12 mb-3 phone">
								{{ form_row(form.phone, {'attr': {'class': 'form-control'},  'label': 'Телефон'}) }}
							</div>
						</div>
						<div class="form_group">
							<div class="col-md-12 mb-3">
								{{ form_row(form.password.first, {'attr': {'class':
              'form-control password', 'label': 'Парола'}}) }}
							</div>
						</div>
						<div class="form_group">
							<div class="col-md-12 mb-3">
								{{ form_row(form.password.second, {'attr': {'class':
              'form-control',  'label': 'Повтори парола'}}) }}
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
								<button type="submit" class="btn btn-primary">
									<i class="fa fa-btn fa-user"></i>
									Регистрация
								</button>
							</div>
						</div>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
