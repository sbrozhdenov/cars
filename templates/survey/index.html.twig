{% extends 'admin-base.html.twig' %}

{% block title %}
	Форма
{% endblock %}

{% block body %}

	<div class="container container-survey">
		<form action="{{ path('app_survey') }}" method="post" id="form1">
			<div class="row">
				<div class="col-md-2">

					<div class="sidebar">
						<a class="{% if app.request.attributes.get('_route') == 'listing' %}active{% endif %}" href="{{ path('listing') }}">Автомобили</a>
						<a class="{% if app.request.attributes.get('_route') == 'survey' %}active{% endif %}" href="{{ path('survey') }}">Заяква за търсене</a>
						<a href="{{ path('app_logout') }}">Изход</a>
					</div>
				</div>
				<div class="col-md-10">
					<div class="card bg-light">
						<div class="card-body">
							<div class="card-header">Избери колата, която търсиш</div>
							<div class="form-group">
								<label for="exampleFormControlSelectTypeOf">Марка</label>
								<input type="text" name="mark" class="form-control" placeholder="Марка">
							</div>

							<div class="form-group">
								<label for="exampleFormControlSelectModel">Модел</label>
								<input type="text" name="model" class="form-control" placeholder="Модел">
							</div>

							<div class="form-group">
								<label for="exampleFormControlSelectEngine">Двигател</label>
								<select name="engine" class="form-control" id="exampleFormControlSelectEngine">
									<option>Дизел</option>
									<option>Бензин</option>
								</select>
							</div>

							<div class="form-group">
								<label for="exampleFormControlSelectBox">Скоростна кутия</label>
								<select name="gear_box" class="form-control" id="exampleFormControlSelectBox">
									<option>Автоматик</option>
									<option>Ръчна</option>
								</select>
							</div>


							<div class="form-group">
								<label for="exampleFormControlSelectEngine">Предпочитани конски сили</label>
								<input name="horse_power" type="text" class="form-control" placeholder="к.с">
							</div>


							<div class="form-group">
								<label for="exampleFormControlSelectType">Тип купе</label>
								<select name="type" class="form-control" id="exampleFormControlSelectType">
									<option>Ван</option>
									<option>Джип</option>
									<option>Седан</option>
									<option>Хечбек</option>
									<option>Кабрио</option>
									<option>Пикап</option>
								</select>
							</div>
							<div class="form-group">
								<div class="row">

									<div class="col">
										<input name="from" type="text" class="form-control" placeholder="Година на производство от">
									</div>
									<div class="col">
										<input name="to" type="text" class="form-control" placeholder="Година на производство до">
									</div>
								</div>
							</div>

							<button form="form1" value="Submit" class="btn btn-primary btn-block">Изпрати запитване</button>

						</div>
					</div>
				</div>
			</form>
		</div>
	{% endblock %}
