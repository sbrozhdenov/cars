{% extends 'admin-base.html.twig' %}

{% block title %}
	Форма
{% endblock %}

{% block body %}

	<div class="container container-survey">
		<div class="row">
			<div class="col-md-2">
				<div class="sidebar">
					<a class="active" href="#home">Моите предложениия</a>
					<a href="#news">Заяква за търсене</a>
					<a href="#about">Изход</a>
				</div>
			</div>
			<div class="col-md-10">
				<div class="card bg-light">
					<div class="card-body">
						<div class="card-header">Избери колата, която търсиш</div>
						<div class="form-group">
							<label for="exampleFormControlSelectTypeOf">Марка</label>
							<input type="text" class="form-control" placeholder="Марка">
						</div>

						<div class="form-group">
							<label for="exampleFormControlSelectModel">Модел</label>
							<input type="text" class="form-control" placeholder="Модел">
						</div>

						<div class="form-group">
							<label for="exampleFormControlSelectEngine">Двигател</label>
							<select class="form-control" id="exampleFormControlSelectEngine">
								<option>Дизел</option>
								<option>Бензин</option>
							</select>
						</div>

						<div class="form-group">
							<label for="exampleFormControlSelectBox">Скоростна кутия</label>
							<select class="form-control" id="exampleFormControlSelectBox">
								<option>Автоматик</option>
								<option>Ръчна</option>
							</select>
						</div>


						<div class="form-group">
							<label for="exampleFormControlSelectEngine">Предпочитани конски сили</label>
							<input type="text" class="form-control" placeholder="к.с">
						</div>


						<div class="form-group">
							<label for="exampleFormControlSelectType">Тип купе</label>
							<select class="form-control" id="exampleFormControlSelectType">
								<option>Ван</option>
								<option>Джип</option>
								<option>Седан</option>
								<option>Хечбек</option>
								<option>Кабрио</option>
								<option>Пикап</option>
							</select>
						</div>
						<div class="form-group">
							<div class="row">

								<div class="col">
									<input type="text" class="form-control" placeholder="Година на производство от">
								</div>
								<div class="col">
									<input type="text" class="form-control" placeholder="Година на производство до">
								</div>
							</div>
						</div>

						<button type="button" class="btn btn-primary btn-block">Изпрати запитване</button>

					</div>
				</div>
			</div>
		</div>
	{% endblock %}
